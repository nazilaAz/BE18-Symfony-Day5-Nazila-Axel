{% extends 'base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
    <h1>Animal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Breed</th>
                <th>Address</th>
                <th>Description</th>
                <th>Age</th>
                <th>Vaccinated</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td>{{ animal.id }}</td>
                <td>{{ animal.name }}</td>
                <td>{{ animal.picture }}</td>
                <td>{{ animal.breed }}</td>
                <td>{{ animal.address }}</td>
                <td>{{ animal.description }}</td>
                <td>{{ animal.age }}</td>
                <td>{{ animal.vaccinated ? 'Yes' : 'No' }}</td>
                <td>{{ animal.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
                    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_new') }}">Create new</a>
{% endblock %}
